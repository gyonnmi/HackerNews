{
  "compilerOptions": {
    "strict": true, // 얼마나 엄격하게 적용해서 변환시킬 것인지
    "target": "ES6", // 사용할 특정 ECMAScript 버전 설정
    "module": "CommonJS", // 모듈을 위한 코드 생성 설정
    "alwaysStrict": true, // strict mode로 분석하고 모든 소스 파일에 "use strict"를 추가할 지 여부
    "noImplicitAny": true, // 'any' 타입으로 구현된 표현식 혹은 정의 에러처리 표시 여부
    "noImplicitThis": true, // 'any' 타입으로 구현된 'this' 표현식 에러처리 표시 여부
    "sourceMap": true, // '.map' 파일 생성 여부
    "downlevelIteration": true // 타겟이 'ES5', 'ES3'일 때에도 'for-of', spread 그리고 destructuring 문법 모두 지원
  }
}